            "Type": "AWS::EC2::NetworkAclEntry",
            "Condition": "CreateSecuritySubnet",
            "Properties": {
                "NetworkAclId": {
                    "Ref": "SecurityNACL"
                },
                "RuleNumber": "100",
                "Protocol": "-1",
                "RuleAction": "allow",
                "Egress": "false",
