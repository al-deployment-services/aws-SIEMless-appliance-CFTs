    "Resources": {
        "ApplianceASG": {
            "Type": "AWS::AutoScaling::AutoScalingGroup",
            "Properties": {
                "AvailabilityZones": [],
                "VPCZoneIdentifier": {
                    "Fn::If": [
                        "CreateSecuritySubnet",
                        [
                            {
                                "Ref": "SecuritySubnet"
                            }
                        ],
