                        "Value": "AlertLogic Security Subnet"
                    },
                    {
                        "Key": "AlertLogic-AccountID",
                        "Value": {
                            "Ref": "AccountId"
                        }
                    },
                    {
                        "Key": "AlertLogic-EnvironmentID",
                        "Value": {
                            "Ref": "EnvironmentId"
                        }
                    },
                    {
                        "Key": "AlertLogic",
                        "Value": "Security"
                    }
