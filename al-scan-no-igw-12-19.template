                            {
                                "Ref": "ExistingSubnetId"
                            }
                        ]
                    ]
                },
                "LaunchConfigurationName": {
                    "Ref": "ApplianceLaunchConfig"
                },
                "MinSize": {
                    "Ref": "ApplianceNumber"
                },
                "MaxSize": {
                    "Ref": "ApplianceNumber"
                },
                "DesiredCapacity": {
                    "Ref": "ApplianceNumber"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "AlertLogic Security Appliance",
                        "PropagateAtLaunch": "true"
                    },
                    {
                        "Key": "AlertLogic-AccountID",
                        "Value": {
                            "Ref": "AccountId"
                        },
                        "PropagateAtLaunch": "true"
                    },
                    {
                        "Key": "AlertLogic-EnvironmentID",
                        "Value": {
                            "Ref": "EnvironmentId"
                        },
                        "PropagateAtLaunch": "true"
                    },
                    {
                        "Key": "AlertLogic",
                        "Value": "Security",
                        "PropagateAtLaunch": "true"
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "12b8bd0d-c8fb-483a-815e-3f2fc9708781"
                }
            }
        },
        "ApplianceLaunchConfig": {
            "Type": "AWS::AutoScaling::LaunchConfiguration",
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSRegionAMI",
                        {
                            "Ref": "AWS::Region"
                        },
                        {
                            "Ref": "Stack"
                        }
                    ]
                },
                "SecurityGroups": [
                    {
                        "Ref": "ApplianceSecurityGroup"
                    }
                ],
                "InstanceType": {
                    "Ref": "ApplianceInstanceType"
                },
                "KeyName": {
                    "Ref": "KeyName"
                },
                "AssociatePublicIpAddress": {
                    "Fn::If": [
                        "PublicIPAddreses",
                        "true",
                        "false"
                    ]
                },
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Sub": [
                            "{\n    \"vaporator_host\": \"${VaporatorHost}\",\n    \"vaporator_port\": ${VaporatorPort},\n    \"account_id\": \"${AccountId}\",\n    \"environment_id\": \"${EnvironmentId}\"\n}",
                            {
                                "VaporatorHost": {
                                    "Fn::FindInMap": [
                                        "Vaporators",
                                        {
                                            "Ref": "Stack"
                                        },
                                        "host"
                                    ]
                                },
                                "VaporatorPort": {
                                    "Fn::FindInMap": [
                                        "Vaporators",
                                        {
                                            "Ref": "Stack"
                                        },
                                        "port"
                                    ]
                                },
                                "AccountId": {
                                    "Ref": "AccountId"
                                },
                                "DeploymentId": {
                                    "Ref": "EnvironmentId"
                                }
                            }
                        ]
                    }
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "bc05710c-cffe-444d-aee0-eb8a9afd61b2"
                }
            }
        },
        "ApplianceSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "VpcId": {
                    "Ref": "ProtectedVPC"
                },
                "GroupDescription": {
                    "Fn::Join": [
                        "",
                        [
                            "Alert Logic Security Group ",
                            {
                                "Ref": "AWS::StackId"
                            },
                            "_",
                            {
                                "Ref": "AccountId"
                            },
                            "_",
                            {
                                "Ref": "EnvironmentId"
                            }
                        ]
                    ]
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "AlertLogic Security Group"
                    },
                    {
                        "Key": "AlertLogic-AccountID",
                        "Value": {
                            "Ref": "AccountId"
                        }
                    },
                    {
                        "Key": "AlertLogic-EnvironmentID",
                        "Value": {
                            "Ref": "EnvironmentId"
                        }
                    },
                    {
                        "Key": "AlertLogic",
                        "Value": "Security"
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "17b8517c-d922-4bc7-9e02-1119ac37e60e"
                }
            }
        },
        "SecurityNACL": {
            "Type": "AWS::EC2::NetworkAcl",
            "Condition": "CreateSecuritySubnet",
            "Properties": {
                "VpcId": {
                    "Ref": "ProtectedVPC"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "AlertLogic Network ACL"
                    },
                    {
                        "Key": "AlertLogic-AccountID",
                        "Value": {
                            "Ref": "AccountId"
                        }
                    },
                    {
                        "Key": "AlertLogic-EnvironmentID",
                        "Value": {
                            "Ref": "EnvironmentId"
                        }
                    },
                    {
                        "Key": "AlertLogic",
